@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-5">
    <h2 class="text-center">Welcome to EventEase</h2>

    <div class="row justify-content-center">
        <!-- Venues Button -->
        <div class="col-md-3 mb-3">
            <a href="@Url.Action("Index", "Venues")" class="btn btn-primary btn-lg w-100">View Venues</a>
        </div>

        <!-- Events Button -->
