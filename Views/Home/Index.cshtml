@{
    ViewData["Title"] = "Home";
}

<div class="d-flex flex-column justify-content-center align-items-center vh-100 text-center text-black">
    <h1 class="mb-5 fw-bold">Welcome to EventEase</h1>

    <div class="d-grid gap-3 col-6 col-md-3">
        <a asp-controller="Events" asp-action="Index" class="btn btn-primary btn-lg">
            <i class="fa fa-calendar-alt me-2"></i> Events
        </a>
        <a asp-controller="Venues" asp-action="Index" class="btn btn-success btn-lg">
            <i class="fa fa-map-marker-alt me-2"></i> Venues
        </a>
        <a asp-controller="Bookings" asp-action="Index" class="btn btn-warning btn-lg text-dark">
            <i class="fa fa-book me-2"></i> Bookings
        </a>
    </div>
</div>
