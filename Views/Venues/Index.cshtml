@model IEnumerable<EventEase.Web.Models.Venue>

@{
    ViewData["Title"] = "Venues";
}

<h1>Venues</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Create New Venue</a>
</p>

<table class="table table-striped table-hover table-bordered align-middle">
    <thead class="table-primary">
        <tr>
            <th>Venue Name</th>
            <th>Location</th>
            <th>Capacity</th>
            <th>Image</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.VenueName</td>
                    <td>@item.Location</td>
                    <td>@item.Capacity</td>
                    <td>
                        <img src="@item.ImageUrl" alt="@item.VenueName" style="max-width:100px; max-height:60px;" />
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.VenueId" class="btn btn-sm btn-primary me-1">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.VenueId" class="btn btn-sm btn-info me-1">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.VenueId" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5" class="text-center">No venues available.</td>
            </tr>
        }
    </tbody>
</table>
