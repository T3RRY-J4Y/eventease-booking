@using Models = EventEase.Web.Models
@model IEnumerable<Models.Event>



@{
    ViewData["Title"] = "Events";
}

<h1 class="text-center">Events</h1>
<hr />

<div class="row">
    @foreach (var evt in Model)
    {
        <div class="col-md-6 mb-4">
            <div class="card h-100 shadow-sm">
                <img src="@evt.Venue?.ImageUrl" class="card-img-top" alt="@evt.Venue?.VenueName" />
                <div class="card-body">
                    <h5 class="card-title">@evt.EventName</h5>
                    <p class="card-text">@evt.Description</p>
                    <p><strong>Date:</strong> @evt.EventDate.ToString("yyyy-MM-dd")</p>
                    <p><strong>Venue:</strong> @evt.Venue?.VenueName</p>


                    <a asp-controller="Events" asp-action="Edit" asp-route-id="@evt.EventId" class="btn btn-sm btn-primary me-2">Edit</a>
                    <a asp-controller="Events" asp-action="Details" asp-route-id="@evt.EventId" class="btn btn-sm btn-secondary">Details</a>
                </div>
            </div>
        </div>
    }
</div>

<div class="text-center mt-4">
    <a asp-action="Create" class="btn btn-success">Add New Event</a>
</div>
