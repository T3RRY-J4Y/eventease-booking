@model EventEase.Web.Models.Booking

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Booking</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            @Html.AntiForgeryToken()

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="EventId"></label>
                    <select asp-for="EventId" class="form-control" asp-items="ViewBag.EventId"></select>
                </div>

                <div class="form-group">
                    <label asp-for="VenueId"></label>
                    <select asp-for="VenueId" class="form-control" asp-items="ViewBag.VenueId"></select>
                </div>

            <div class="form-group mt-3">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        document.getElementById('eventSelect').addEventListener('change', function () {
            var selectedEventId = this.value;
            var bookingDateInput = document.getElementById('bookingDate');

            if (selectedEventId) {
                fetch('/Events/GetEventDate/' + selectedEventId)
                    .then(response => response.json())
                    .then(data => {
                        bookingDateInput.value = data.date; // sets the read-only input
                    })
                    .catch(() => {
                        bookingDateInput.value = '';
                    });
            } else {
                bookingDateInput.value = '';
            }
        });
    </script>

}
