@model IEnumerable<EventEase.Web.Models.Booking>

@{
    ViewData["Title"] = "Bookings";
}

<h1 class="text-center">Bookings</h1>

<p class="text-center">
    <a asp-action="Create" class="btn btn-success">Create New</a>
</p>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Event Name</th>
            <th>Venue</th>
            <th>Booking Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.Event?.EventName</td>
                    <td>@item.Venue?.VenueName</td>
                    <td>@item.BookingDate?.ToString("yyyy-MM-dd")</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.BookingId" class="btn btn-sm btn-primary me-1">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.BookingId" class="btn btn-sm btn-secondary me-1">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.BookingId" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4" class="text-center">No bookings available.</td>
            </tr>
        }
    </tbody>
</table>
