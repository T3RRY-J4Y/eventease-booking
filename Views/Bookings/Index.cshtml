@model IEnumerable<EventEase.Web.Models.Booking>

@{
    ViewData["Title"] = "Bookings";
}

<h1>Bookings</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Create New Booking</a>
</p>

<table class="table table-striped table-hover table-bordered align-middle">
    <thead class="table-primary">
        <tr>
            <th>Event</th>
            <th>Start Time</th>
            <th>End Time</th>
            <th>Venue</th>
            <th>Booking Date</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Event?.EventName</td>
                <td>@item.Event?.StartTime</td>
                <td>@item.Event?.EndTime</td>
                <td>@item.Venue?.VenueName</td>
                <td>@item.BookingDate?.ToString("yyyy-MM-dd")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.BookingId" class="btn btn-primary btn-sm">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.BookingId" class="btn btn-info btn-sm">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.BookingId" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
        else
        {
        <tr>
            <td colspan="5" class="text-center">No bookings available.</td>
        </tr>
        }
    </tbody>
</table>
